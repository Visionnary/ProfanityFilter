{
    "manifest_version": 3,
    "name": "Webreader",
    "description": "Read text from website",
    "version": "1.0",
    "background": {
      "service_worker": "background.js"},
    "icons":{
      "16": "/icons/image-16.png",
      "48": "/icons/image-48.png",
      "128": "/icons/image-128.png"
    },
    "action":{
      "default_icon":{
        "16": "/icons/image-16.png",
        "48": "/icons/image-48.png",
        "128": "/icons/image-128.png"
        },
      "default_popup": "menu.html"
    },
    "permissions": ["activeTab", "scripting", "storage", "commands", "contextMenus"],
    "commands": {
      "filter": {
        "description": "Filters text on the current page."
      }
    }
}